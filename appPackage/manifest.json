{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.24/MicrosoftTeams.schema.json",
  "manifestVersion": "1.24",
  "version": "2.0",
  "id": "${{TEAMS_APP_ID}}",
  "developer": {
    "name": "Masato Kobayashi",
    "websiteUrl": "https://www.example.com",
    "privacyUrl": "https://www.example.com/privacy",
    "termsOfUseUrl": "https://www.example.com/termofuse"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "MTG議事録マン",
    "full": "MTG議事録マン"
  },
  "description": {
    "short": "会議のトランスクリプトの入力を受け取り、「MTG議事録くん_V3」によって議事録を作成・整形します。",
    "full": "このエージェントは、会議のトランスクリプト（文字起こし）ファイルを受け取り、「MTG議事録くん_V3」を自動操作して議事録を生成します。整形から議事録作成まで自動で完走し、MarkdownとWordファイルのダウンロードリンクを提供します。"
  },
  "accentColor": "#FFFFFF",
  "composeExtensions": [],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "copilotAgents": {
    "declarativeAgents": [
      {
        "id": "declarativeAgent",
        "file": "declarativeAgent.json"
      }
    ]
  },
  "validDomains": []
}
